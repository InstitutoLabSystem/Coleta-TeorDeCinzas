@model AcessModel.Usuario;
@{
    Layout = null;
}
@{
    ViewData["Title"] = "Login";
}


<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        html {
            height: 100%;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            background: linear-gradient(Lavender,Bisque);
        }

        .login-box {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 400px;
            padding: 40px;
            transform: translate(-50%, -50%);
            background: rgba(139,0,0,.7);
            box-sizing: border-box;
            box-shadow: 0 15px 25px rgba(0,0,0,.9);
            border-radius: 10px;
        }

            .login-box h2 {
                margin: 0 0 30px;
                padding: 0;
                color: #fff;
                text-align: center;
            }

        a {
            position: absolute;
            top: 90%;
            left: 70%;
            text-decoration: none;
            color: #fff;
            border: none;
            ;
            padding: 3px 5px;
        }


        .login-box .user-box {
            position: relative;
        }

            .login-box .user-box input {
                width: 100%;
                padding: 10px 0;
                font-size: 16px;
                color: #fff;
                margin-bottom: 30px;
                border: none;
                border-bottom: 1px solid #fff;
                outline: none;
                background: transparent;
            }

            .login-box .user-box label {
                position: absolute;
                top: 0;
                left: 0;
                padding: 10px 0;
                font-size: 16px;
                color: #fff;
                pointer-events: none;
                transition: .5s;
            }

            .login-box .user-box input:focus ~ label,
            .login-box .user-box input:valid ~ label {
                top: -20px;
                left: 0;
                color: maroon;
                font-size: 12px;
            }

        .login-box form button {
            position: relative;
            display: inline-block;
            padding: 10px 20px;
            color: maroon;
            font-size: 16px;
            text-decoration: none;
            text-transform: uppercase;
            overflow: hidden;
            transition: .5s;
            margin-top: 40px;
            letter-spacing: 4px
        }

        .login-box button:hover {
            background: maroon;
            color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 5px maroon, 0 0 25px maroon, 0 0 50px maroon, 0 0 100px maroon;
        }

        .login-box button span {
            position: absolute;
            display: block;
        }

            .login-box button span:nth-child(1) {
                top: 0;
                left: -100%;
                width: 100%;
                height: 2px;
                background: linear-gradient(90deg, transparent, maroon);
                animation: btn-anim1 1s linear infinite;
            }


            .login-box button span:nth-child(2) {
                top: -100%;
                right: 0;
                width: 2px;
                height: 100%;
                background: linear-gradient(180deg, transparent, maroon);
                animation: btn-anim2 1s linear infinite;
                animation-delay: .25s
            }



            .login-box button span:nth-child(3) {
                bottom: 0;
                right: -100%;
                width: 100%;
                height: 2px;
                background: linear-gradient(270deg, transparent, maroon);
                animation: btn-anim3 1s linear infinite;
                animation-delay: .5s
            }

            .login-box button span:nth-child(4) {
                bottom: -100%;
                left: 0;
                width: 2px;
                height: 100%;
                background: linear-gradient(360deg, transparent, maroon);
                animation: btn-anim4 1s linear infinite;
                animation-delay: .75s
            }

    </style>

</head>
<body>
    <div class="login-box">
        <h2>Login</h2>
        <form method="post" asp-controller="Acess" asp-action="Login">
            <div class="user-box">
                <input type="text" asp-for="Nome_Usuario" required>
                <label>User</label>
            </div>
            <div class="user-box">
                <input type="password" asp-for="Senha_Usuario" required>
                <label>Password</label>
            </div>
            <button type="submit" value="Login">
                <span></span><span></span><span></span><span></span>
                ENTRAR
            </button>
        </form>
    </div>
    @if (TempData.ContainsKey("Mensagem"))
    {
        <script>

            alert('@Html.Raw(TempData["Mensagem"])');

        </script>
    }
</body>
</html>


